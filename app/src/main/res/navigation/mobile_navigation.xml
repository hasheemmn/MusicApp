<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.oges.myapplication.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.oges.myapplication.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_equalizerFragment"
            app:destination="@id/equalizerFragment" />
    </fragment>
    <fragment
        android:id="@+id/equalizerFragment"
        android:name="com.oges.myapplication.fragment.EqualizerFragment"
        android:label="fragment_equaliser"
        tools:layout="@layout/fragment_equaliser" >
        <action
            android:id="@+id/action_equalizerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>